# .htaccess para pasta /public

# Força HTTP para HTTPS e adiciona www
RewriteEngine On

# Redireciona para https e www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

# Remove www duplicado se já existir
RewriteCond %{HTTP_HOST} ^www\.www\.(.+)$ [NC]
RewriteRule ^ https://www.%1%{REQUEST_URI} [L,R=301,NE]

# Redireciona todas as requisições para /public
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [L]

# Permite acesso direto a arquivos existentes
RewriteCond %{DOCUMENT_ROOT}/public/$1 -f
RewriteRule ^public/(.*)$ /public/$1 [L]

# Protege arquivos sensíveis
<FilesMatch "\.(env|htaccess|git|json|yml|yaml|lock|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>